{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2015"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
